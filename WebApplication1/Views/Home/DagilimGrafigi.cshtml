    <div header class="masthead text-center">
        <h1 class="masthead-heading text-uppercase">Ayva'nın Son 3 Yıla Göre Dağılımı</h1>
    </div>
    <div class="container mt-5">
        <canvas id="myChart" width="400" height="200"></canvas>
    </div>

    <!-- Bootstrap ve Chart.js JS dosyalarını ekleyin -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
// Veriyi temsil eden örnek bir dizi
        var randomNumber = Math.floor(Math.random() * 257);
        var cityData = {
          labels: ['2021', '2022', '2023'],
            datasets: [
             @foreach(var city in Model)
            {
               <text>
               {
                   label: '@city.sehir_adi',
                   data: [@city.sehir_veri_1, @city.sehir_veri_2, @city.sehir_veri_3],
                    fill: false,
                    borderColor: 'rgba(' + randomNumber + ',' + randomNumber + ',' + randomNumber + ', 1)',
                   tension: 0.1
               },
               </text>
            }
          ]
        };

// Grafik oluştur
var ctx = document.getElementById('myChart').getContext('2d');
var myChart = new Chart(ctx, {
  type: 'line',
  data: cityData,
  options: {
    scales: {
      x: {
        type: 'linear',
        position: 'bottom'
      },
      y: {
        min: 0
      }
    }
  }
});
    </script>
